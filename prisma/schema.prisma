generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String             @id
  roles             String[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  Economy           Economy?
  pendingSignatures PendingSignature[]
}

model Poll {
  id                String             @id @default(cuid())
  question          String
  options           Json
  requiredRoleId    String
  status            PollStatus         @default(DRAFT)
  createdBy         String
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  batchSignedAt     DateTime?
  pendingSignatures PendingSignature[]
  results           PollResult[]
}

model PendingSignature {
  id         String @id @default(cuid())
  userId     String
  pollId     String
  blindedSig String
  poll       Poll   @relation(fields: [pollId], references: [id])
  user       User   @relation(fields: [userId], references: [id])

  @@unique([userId, pollId])
}

model PollResult {
  pollId   String
  optionId String
  tally    Int    @default(0)
  poll     Poll   @relation(fields: [pollId], references: [id])

  @@id([pollId, optionId])
}

model ConsumedToken {
  tokenHash  String   @id
  pollId     String
  consumedAt DateTime @default(now())
}

model Economy {
  id        String   @id
  wallet    Int      @default(0)
  bank      Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime
  User      User     @relation(fields: [id], references: [id])
}

model Inventory {
  userId   String
  itemId   Int
  quantity Int      @default(1)
  ShopItem ShopItem @relation(fields: [itemId], references: [id])

  @@id([userId, itemId])
}

model Job {
  id            Int             @id @default(autoincrement())
  description   String
  type          String?
  sheetRow      Int?
  isActive      Boolean         @default(true)
  createdAt     DateTime        @default(now())
  JobAssignment JobAssignment[]
}

model JobAssignment {
  id         Int      @id @default(autoincrement())
  jobId      Int
  userId     String
  assignedAt DateTime @default(now())
  Job        Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@unique([jobId, userId])
}

model JobCycle {
  id           Int @id @default(1)
  currentIndex Int @default(0)
}

model ShopItem {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  description String?
  price       Int
  quantity    Int         @default(-1)
  isAvailable Boolean     @default(true)
  createdAt   DateTime    @default(now())
  Inventory   Inventory[]
}

enum PollStatus {
  DRAFT
  OPEN
  CLOSED
}
