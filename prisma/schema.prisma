generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String             @id
  roles             String[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  Economy           Economy?
  pendingSignatures PendingSignature[]
}

model Poll {
  id                String             @id @default(cuid())
  question          String
  options           Json
  requiredRoleId    String
  status            PollStatus         @default(DRAFT)
  createdBy         String
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  batchSignedAt     DateTime?
  pendingSignatures PendingSignature[]
  results           PollResult[]
}

model PendingSignature {
  id         String @id @default(cuid())
  userId     String
  pollId     String
  blindedSig String
  poll       Poll   @relation(fields: [pollId], references: [id])
  user       User   @relation(fields: [userId], references: [id])

  @@unique([userId, pollId])
}

model PollResult {
  pollId   String
  optionId String
  tally    Int    @default(0)
  poll     Poll   @relation(fields: [pollId], references: [id])

  @@id([pollId, optionId])
}

model ConsumedToken {
  tokenHash  String   @id
  pollId     String
  consumedAt DateTime @default(now())
}

model Economy {
  id        String   @id
  wallet    Int      @default(0)
  bank      Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime
  User      User     @relation(fields: [id], references: [id])
}

model Inventory {
  userId   String
  itemId   Int
  quantity Int      @default(1)
  ShopItem ShopItem @relation(fields: [itemId], references: [id])

  @@id([userId, itemId])
}

model Job {
  id            Int             @id @default(autoincrement())
  description   String
  type          String?
  sheetRow      Int?
  isActive      Boolean         @default(true)
  createdAt     DateTime        @default(now())
  JobAssignment JobAssignment[]
}

model JobAssignment {
  id         Int      @id @default(autoincrement())
  jobId      Int
  userId     String
  assignedAt DateTime @default(now())
  Job        Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@unique([jobId, userId])
}

model JobCycle {
  id           Int @id @default(1)
  currentIndex Int @default(0)
}

model ShopItem {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  description String?
  price       Int
  quantity    Int         @default(-1)
  isAvailable Boolean     @default(true)
  createdAt   DateTime    @default(now())
  Inventory   Inventory[]
}

enum PollStatus {
  DRAFT
  OPEN
  CLOSED
}

// ============================================
// ANONYMOUS VOTING (Semaphore)
// ============================================

// Semaphore group for anonymous voting
model SemaphoreGroup {
  id              String                  @id @default(cuid())
  name            String
  discordRoleId   String
  discordRoleName String
  category        VotingCategory          @default(ALL)
  merkleRoot      String                  // Current Merkle tree root
  memberCount     Int                     @default(0)
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt
  members         SemaphoreGroupMember[]
  polls           AnonPoll[]

  @@unique([discordRoleId, category])
}

// Group member (stores identity commitments)
model SemaphoreGroupMember {
  id         String         @id @default(cuid())
  groupId    String
  commitment String         // The identity commitment (public)
  index      Int            // Position in Merkle tree
  createdAt  DateTime       @default(now())
  group      SemaphoreGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([groupId, commitment])
  @@index([groupId, index])
}

// Anonymous poll using Semaphore proofs
model AnonPoll {
  id          String                @id @default(cuid())
  question    String
  description String?
  options     Json                  // Array of option strings
  groupId     String                // Which Semaphore group can vote
  category    VotingCategory        @default(ALL)
  status      PollStatus            @default(DRAFT)
  createdBy   String                // Admin who created it
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  closesAt    DateTime?
  group       SemaphoreGroup        @relation(fields: [groupId], references: [id])
  nullifiers  AnonVoteNullifier[]
  results     AnonPollResult[]
}

// Nullifiers to prevent double voting
model AnonVoteNullifier {
  id          String   @id @default(cuid())
  pollId      String
  nullifier   String   // The nullifier hash from the proof
  optionIndex Int      // Which option was voted for
  createdAt   DateTime @default(now())
  poll        AnonPoll @relation(fields: [pollId], references: [id], onDelete: Cascade)

  @@unique([pollId, nullifier])
}

// Vote tallies per option
model AnonPollResult {
  pollId      String
  optionIndex Int
  count       Int      @default(0)
  poll        AnonPoll @relation(fields: [pollId], references: [id], onDelete: Cascade)

  @@id([pollId, optionIndex])
}

enum VotingCategory {
  TREASURY
  TECHNICAL
  SOCIAL
  GOVERNANCE
  ALL
}
